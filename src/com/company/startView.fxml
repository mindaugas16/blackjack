<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="stackPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.company.WindowsGame"
            prefHeight="600" prefWidth="800.0">
    <top>
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" spacing="10" >
                <padding>
                    <Insets top="10" bottom="5"/>
                </padding>
                <Button fx:id="dealButton" text="Deal" onAction="#dealAction" />
                <Button fx:id="hitButton" onAction="#hitAction" text="Hit" />
                <Button fx:id="standButton" onAction="#standAction" text="Stand"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10" >
                <padding>
                    <Insets top="5" bottom="10"/>
                </padding>
                <Label text="Player: 0"/><Label text="/"/><Label text="Dealer:0"/>
            </HBox>
            <HBox fx:id="messageHBox" alignment="CENTER" spacing="10" >
            </HBox>
        </VBox>
    </top>
    <center>

        <VBox spacing="10" alignment="CENTER" style="-fx-background-color:#194D1E;">
            <Label fx:id="playerScore"/>
            <HBox fx:id="playerCards" spacing="-50" alignment="CENTER"/>

            <Label fx:id="message" style="-fx-background-color:WHITE;"/>

            <Label fx:id="dealerScore"/>
            <HBox fx:id="dealerCards" alignment="CENTER" spacing="-50"/>
        </VBox>


    </center>
</BorderPane>
